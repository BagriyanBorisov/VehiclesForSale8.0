@model PaginatedList<AdminPanelUserViewModel>;

@{
    ViewData["Title"] = "Registered Users:";
    int count = 1;
}
<div class="row mt-5">
    <div class="row mt-5">
<div class="mt-4 p-5 bg-light text-center">

    <h2 class="display-4 mb-2">Admin Panel </h2>
    <h3 class="mb-3">Registered Users </h3>
    <a asp-area="" asp-controller="Admin" asp-action="Index"
       class="btn btn-secondary btn-lg col-md-2 mb-2">Go Back</a>
    <hr class="my-4">   
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Phone number</th>
            <th scope="col">Registration Made</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.RegisteredSince</td>
            </tr>
            count++;
        }
        </tbody>
    </table>
</div>


@{
    var prevDisabled = !Model.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.HasNext ? "disabled" : "";
    string action = "Users";
}

<partial name="_PaginationControls"
         model="(action, Model.PageIndex, prevDisabled, nextDisabled)" />