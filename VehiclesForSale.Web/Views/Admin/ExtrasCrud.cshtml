                                </td>
                            </tr>
                        }
                        <tr>
                            <form asp-controller="Admin" asp-action="AddOther">
                                <span asp-validation-for="@Model.OtherNew" class="text-danger"></span>
                                <input class="form-control mb-2" aria-required="true" asp-for="@Model.OtherNew" />
                                <input class="btn btn-success col-6 mb-2" value="Add Other" type="submit" />
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}