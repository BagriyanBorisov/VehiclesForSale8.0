@model ExtrasCrudViewModel;

@{
    ViewData["Title"] = "Extras Crud";
}

<div class="row mt-5">
    <div class="row mt-5">

<h1 class="text-center my-2">Admin Panel</h1>
<h2 class="text-center my-2">@ViewData["Title"]</h2>
<h4 class="text-center text-danger my-2">@ViewBag.ErrorMessage </h4>
<hr />
<div class="row text-center my-2">
    <div class="container col-lg-3 col-sm-12 mb-2 border-end">
        <div class="table-responsive ">
                    <div class="table-wrapper typescrud-overflow">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Interior</h2></div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var interior in Model.InteriorExtras.Reverse())
                        {
                            <tr>
                                <td class="col-md-1">@interior.Id</td>
                                <td class="col-md-9">@interior.Name</td>
                                <td class="col-md-2">
                                    <a class="btn btn-danger" asp-action="DeleteInterior" asp-controller="Admin" asp-route-interiorId="@interior.Id">Delete</a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <form asp-controller="Admin" asp-action="AddInterior">
                                <span asp-validation-for="@Model.InteriorNew" class="text-danger"></span>
                                <input class="form-control mb-2" aria-required="true" asp-for="@Model.InteriorNew" />
                                <input class="btn btn-success col-10 mb-2" value="Add Interior" type="submit" />
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container col-lg-2 col-sm-12 mb-2 border-end">
        <div class="table-responsive ">
                    <div class="table-wrapper typescrud-overflow">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Exterior</h2></div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ex in Model.ExteriorExtras.Reverse())
                        {
                            <tr>
                                <td class="col-md-1">@ex.Id</td>
                                <td class="col-md-9">@ex.Name</td>
                                <td class="col-md-2">
                                    <a class="btn btn-danger" asp-action="DeleteExterior" asp-controller="Admin" asp-route-exteriorId="@ex.Id">Delete</a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <form asp-controller="Admin" asp-action="AddExterior">
                                <span asp-validation-for="@Model.ExteriorNew" class="text-danger"></span>
                                <input class="form-control mb-2" aria-required="true" asp-for="@Model.ExteriorNew" />
                                <input class="btn btn-success col-10 mb-2" value="Add Exterior" type="submit" />
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container col-lg-3 col-sm-12 mb-2 border-end">
        <div class="table-responsive">
                    <div class="table-wrapper typescrud-overflow">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Comfort</h2></div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comfort in Model.ComfortExtras.Reverse())
                        {
                            <tr>
                                <td class="col-md-1">@comfort.Id</td>
