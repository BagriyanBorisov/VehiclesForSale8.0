                                <input class="form-control mb-2" aria-required="true" asp-for="@Model.ComfortNew" />
                                <input class="btn btn-success col-10 mb-2" value="Add Comfort" type="submit" />
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container col-lg-2 col-sm-12 mb-2 border-end">
        <div class="table-responsive">
                    <div class="table-wrapper typescrud-overflow">
                <div class="table-title">
                    <div class="row">
