                                <input class="btn btn-success col-10 mb-2" value="Add Safety" type="submit" />
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container col-lg-2 col-sm-12 mb-2">
        <div class="table-responsive">
                    <div class="table-wrapper typescrud-overflow">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Other</h2></div>
                    </div>
