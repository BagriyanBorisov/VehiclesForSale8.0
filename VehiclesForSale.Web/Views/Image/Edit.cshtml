@model ImageFormViewModel

@{
    ViewData["Title"] = "Edit Images";
}
<div class="row mt-5"></div>
<div class="row mt-5"></div>
<h1 class="text-center"> Edit Images For @Model.VehicleName</h1>

<div class="container">
    <ul class="progressbar">
        <li>Edit Vehicle</li>
        <li class="active">Edit Images</li>
        <li>Edit Extras</li>
    </ul>
</div>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" asp-controller="Image" asp-route-vehicleId="@Model.VehicleId">
            <div class="form-group">
                <label asp-for="Images" class="control-label">Add an images(you can select multiple)</label>
                <input asp-for="Images" class="form-control" multiple />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <hr />
            <div class="mb-3">
                <input class="btn btn-primary mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
                <a asp-action="EditExtraForVehicle" asp-controller="Extra" asp-route-id="@Model.VehicleId" 
                class="mb-3 btn btn-success w-100 p-3 fw-bold">Continue To Extras</a>
            </div>
        </form>
    </div>
    <div class="container">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Images <b>Details</b></h2></div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var image in Model.ImagesForTable)
                        {
                            <tr>
                                <td class="col-md-5">@image.Name</td>
                                <td class="col-md-5 justify-content-center"><img src="~/Uploads/@image.ImageUrl" width="400" height="300" /></td>
                                <td class="col-md-2">
                                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Image" asp-route-ImageId="@image.Id" asp-route-vehicleId="@Model.VehicleId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

