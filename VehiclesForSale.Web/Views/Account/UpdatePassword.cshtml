@model UpdatePasswordViewModel;

@{
    ViewData["Title"] = "Актуализиране на парола";
}
<div class="row mt-5">
    </div>
    <div class="row mt-5">
        </div>
<h1 class="text-center">@ViewData["Title"]</h1>
        <div class="row ms-1 me-1 pb-3">
            <a class="col-md-4 offset-md-4">
                <img src="~/Uploads/Rectangular_Car_Logo white.png" class="center-block card-img" alt="Продажба на коли">
            </a>
        </div>

<div class="row">
            <div class="col-md-4 offset-md-4 login-register-container border-dark" id="profile-container">
        <form id="updateForm" method="post">
            <div class="text-center mb-3 pt-2">
                <label asp-for="@Model.OldPassword">Стара парола:</label>
                <input class="form-control input-custom border-dark" type="password" placeholder="********" autocomplete="new-password" aria-required="true" asp-for="@Model.OldPassword" />
                <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">Нова парола:</label>
                <input class="form-control input-custom border-dark" type="password" placeholder="********" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword">Потвърждение нова парола:</label>
                <input class="form-control input-custom border-dark" type="password" placeholder="********" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center pb-3">
                <button id="editPass" type="submit" class="btn btn-warning">Обнови парола</button>
            </div>
        </form>
    </div>
</div>

<div class="row ms-1 me-1 pt-3 grid-row-end">
    <a class="col-md-4 offset-md-4">
        <img src="~/Uploads/Rectangular_Car_Logo white without car.png" class="center-block card-img" alt="Продажба на коли" style="height=30px; width=auto">
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


