@model (string aspAction, int pageIndex, string prevDisabled, string nextDisabled)

<div class="row my-4">
    <div class="col-12 text-center">
        <a asp-action="@Model.aspAction" asp-route-pageNumber="@(Model.pageIndex-1)" class="btn btn-danger me-5 col-sm-2 @Model.prevDisabled">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>Назад
        </a>
        <a asp-action="@Model.aspAction" asp-route-pageNumber="@(Model.pageIndex+1)" class="btn btn-primary col-md-2 col-sm-4 @Model.nextDisabled">Напред
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                      d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
            </svg>
        </a>
    </div>
</div>